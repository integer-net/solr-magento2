<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceContainer name="left">
      <action method="unsetChild">
        <arguments>
          <argument xsi:type="string" name="name">catalogsearch.leftnav</argument>
        </arguments>
      </action>
      <action method="unsetChild">
        <arguments>
          <argument xsi:type="string" name="name">enterprisesearch.leftnav</argument>
        </arguments>
      </action>
      <block class="IntegerNet\Solr\Block\Result\Layer\View" template="IntegerNet_Solr::catalog/layer/view.phtml" name="catalogsearch.solr.leftnav">
        <action method="setModuleName">
          <arguments>
            <argument xsi:type="string" name="name">Mage_CatalogSearch</argument>
          </arguments>
        </action>
        <block class="IntegerNet\Solr\Block\Result\Layer\State" template="IntegerNet_Solr::catalog/layer/state.phtml" as="state" name="catalogsearch.solr.layer.state"/>
        <block class="IntegerNet\Solr\Block\Result\Layer\Filter" template="IntegerNet_Solr::catalog/layer/filter.phtml" as="filter" name="catalogsearch.solr.layer.filter"/>
      </block>
    </referenceContainer>
    <referenceContainer name="content">
      <block class="IntegerNet\Solr\Block\Result\Layer\View" template="IntegerNet_Solr::integernet/solr/layer/top/view.phtml" name="catalogsearch.solr.topnav">
        <action method="setModuleName">
          <arguments>
            <argument xsi:type="string" name="name">Mage_CatalogSearch</argument>
          </arguments>
        </action>
        <block class="IntegerNet\Solr\Block\Result\Layer\State" template="IntegerNet_Solr::integernet/solr/layer/top/state.phtml" as="state" name="catalogsearch.solr.topnav.layer.state"/>
        <block class="IntegerNet\Solr\Block\Result\Layer\Filter" template="IntegerNet_Solr::integernet/solr/layer/top/filter.phtml" as="filter" name="catalogsearch.solr.topnav.layer.filter"/>
      </block>
    </referenceContainer>
  </body>
</page>